<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = User.avatar_url(@user, 128) %>
       <% unless avatar_url.nil? %>
         <div class="media-left">
            <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2><%= user_has_posts? ? "Posts" : "#{@user.name} has not submitted any posts yet." %></h2>
 <%= render @user.posts %>

 <h2><%= user_has_comments? ? "Comments" : "#{@user.name} has not submitted any comments yet." %></h2>
 <%= render @user.comments %>

 <hr />
 <h2><%= user_has_favorites? ? "#{@user.name} #{pluralize(@user.favorites.count, 'favorite post')}:" : "#{@user.name} has no favorites yet." %></h2>
 <%= render partial: 'favorites/show_user_favs', locals: { user: @user } %>
